<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical" >

    <com.micro.shop.view.ActionHeadBar
        android:id="@+id/verification_headbar"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/verification_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/verification_hint"
                android:textColor="#848484"
                android:textSize="@dimen/front_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C1C1C1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/reg_verification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/verification_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/reg_verification"
                            android:contentDescription="@null"
                            android:scaleType="centerInside" />

                        <TextView
                            android:id="@+id/verification_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:background="@drawable/verification_btn_bg"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/verification_btn"
                            android:textColor="@color/white"
                            android:textSize="@dimen/front_18" />

                        <TextView
                            android:id="@+id/verification_icon_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/verification_icon"
                            android:hint="@string/reg_verification"
                            android:textColor="#000000"
                            android:textSize="@dimen/front_18" />

                        <TextView
                            android:id="@+id/verification_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/verification_btn"
                            android:layout_toRightOf="@id/verification_icon_title"
                            android:textColor="#000000"
                            android:textSize="@dimen/front_18" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C1C1C1" />

            <TextView
                android:id="@+id/verification_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/logo_btn_bg"
                android:gravity="center"
                android:text="@string/verification_ok"
                android:textColor="@color/white"
                android:textSize="@dimen/front_20" />
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/G:/优商圈app/客户端模版app/微店源码/MicroShop/res/layout/activity_reg_verification.xml -->