<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/dynamic_item_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/dynamic_item_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/dynamic_item_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:src="@drawable/dyni_icon" />

                <TextView
                    android:id="@+id/dynamic_item_icon_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/dynamic_item_icon"
                    android:text="@string/dynamic_name"
                    android:textColor="#000000"
                    android:textSize="@dimen/front_16" />

                <TextView
                    android:id="@+id/dynamic_item_collect_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_btn_selects"
                    android:padding="5dp"
                    android:text="@string/dynamic_collect_btn"
                    android:textColor="@drawable/text_select"
                    android:textSize="@dimen/front_16" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/dot_line" />

            <TextView
                android:id="@+id/dynamic_item_intro_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:text="@string/dynamic_intro"
                android:textColor="#868686"
                android:textSize="@dimen/front_14" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/dynamic_item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#33000000" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" >

                    <TextView
                        android:id="@+id/dynamic_item_news_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:text="@string/dynamic_news_price"
                        android:textColor="#FFFF00"
                        android:textSize="@dimen/front_18" />

                    <TextView
                        android:id="@+id/dynamic_item_old_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:text="@string/dynamic_old_price"
                        android:textColor="#FFFF00"
                        android:textSize="@dimen/front_14" />
                </LinearLayout>

                <TextView
                    android:id="@+id/dynamic_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:text="@string/dynamic_count"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/front_14" />
            </RelativeLayout>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/dynamic_item_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <LinearLayout
                android:id="@+id/dynamic_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/dynamic_item_address_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:duplicateParentState="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/address_selects" />

                <TextView
                    android:id="@+id/dynamic_item_address_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:duplicateParentState="true"
                    android:text="@string/dynamic_address"
                    android:textColor="@drawable/text_select"
                    android:textSize="@dimen/front_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dynamic_item_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/dynamic_item_share_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:duplicateParentState="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/share_selects" />

                <TextView
                    android:id="@+id/dynamic_item_share_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:duplicateParentState="true"
                    android:text="@string/dynamic_share"
                    android:textColor="@drawable/text_select"
                    android:textSize="@dimen/front_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dynamic_item_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/dynamic_item_share"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/dynamic_item_collect_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:duplicateParentState="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/zan_selects" />

                <TextView
                    android:id="@+id/dynamic_item_collect_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:duplicateParentState="true"
                    android:text="@string/dynamic_collect"
                    android:textColor="@drawable/text_select"
                    android:textSize="@dimen/front_14" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/G:/优商圈app/客户端模版app/微店源码/MicroShop/res/layout/adapter_dynamic_item.xml -->