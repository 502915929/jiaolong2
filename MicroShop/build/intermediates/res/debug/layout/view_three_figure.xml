<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/shop_main_ban"
        android:textColor="@color/black"
        android:textSize="@dimen/front_18" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#DADADA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/shop_main_ban_collect_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/shop_main_ban_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/shop_main_ban_collect"
                android:textColor="@color/apptheme"
                android:textSize="@dimen/front_18" />

            <RelativeLayout
                android:id="@+id/shop_main_ban_collect_line"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignLeft="@id/shop_main_ban_collect"
                android:layout_alignRight="@id/shop_main_ban_collect"
                android:layout_below="@id/shop_main_ban_collect"
                android:layout_centerHorizontal="true"
                android:background="@color/apptheme" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shop_main_ban_sell_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/shop_main_ban_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/shop_main_ban_sell"
                android:textColor="@color/black"
                android:textSize="@dimen/front_18" />

            <RelativeLayout
                android:id="@+id/shop_main_ban_sell_line"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignLeft="@id/shop_main_ban_sell"
                android:layout_alignRight="@id/shop_main_ban_sell"
                android:layout_below="@id/shop_main_ban_sell"
                android:layout_centerHorizontal="true"
                android:background="@color/apptheme"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/shop_main_ban_content"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp" />

</LinearLayout><!-- From: file:/G:/优商圈app/客户端模版app/微店源码/MicroShop/res/layout/view_three_figure.xml -->