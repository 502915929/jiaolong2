<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/shop_main_head"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="top"
        android:background="@color/apptheme" >

        <RelativeLayout
            android:id="@+id/shop_main_head_back"
            android:layout_width="45dp"
            android:layout_height="45dp" >

            <ImageView
                android:id="@+id/shop_main_head_back_image"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:adjustViewBounds="true"
                android:background="@drawable/shop_main_back"
                android:contentDescription="@null"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shop_main_head_home"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true" >

            <ImageView
                android:id="@+id/shop_main_head_home_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="false"
                android:background="@drawable/product_img_more"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:baselineAligned="false" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <RelativeLayout
                android:id="@+id/product_img_tab_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/product_img_tab_one_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:text="@string/product_tab_one_title"
                    android:textColor="@color/apptheme"
                    android:textSize="@dimen/front_16" />

                <RelativeLayout
                    android:id="@+id/product_img_tab_one_line"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignLeft="@id/product_img_tab_one_title"
                    android:layout_alignRight="@id/product_img_tab_one_title"
                    android:layout_below="@id/product_img_tab_one_title"
                    android:layout_marginTop="10dp"
                    android:background="@color/apptheme" >
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="@drawable/search_item_line"
                android:contentDescription="@null"
                android:scaleType="centerInside" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <RelativeLayout
                android:id="@+id/product_img_tab_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/product_img_tab_two_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:text="@string/product_tab_two_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/front_16" />

                <RelativeLayout
                    android:id="@+id/product_img_tab_two_line"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignLeft="@id/product_img_tab_two_title"
                    android:layout_alignRight="@id/product_img_tab_two_title"
                    android:layout_below="@id/product_img_tab_two_title"
                    android:layout_marginTop="10dp"
                    android:background="@color/apptheme"
                    android:visibility="gone" >
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="@drawable/search_item_line"
                android:contentDescription="@null"
                android:scaleType="centerInside" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <RelativeLayout
                android:id="@+id/product_img_tab_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/product_img_tab_three_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:text="@string/product_tab_three_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/front_16" />

                <RelativeLayout
                    android:id="@+id/product_img_tab_three_line"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignLeft="@id/product_img_tab_three_title"
                    android:layout_alignRight="@id/product_img_tab_three_title"
                    android:layout_below="@id/product_img_tab_three_title"
                    android:layout_marginTop="10dp"
                    android:background="@color/apptheme"
                    android:visibility="gone" >
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A1A1A1" >
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/layout_adv_style_pointer_vp_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout><!-- From: file:/G:/优商圈app/客户端模版app/微店源码/MicroShop/res/layout/activity_product_image_detail.xml -->