<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="#FFFFFF"
        >

        <RelativeLayout
            android:id="@+id/local_item_intro"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true" >

            <RelativeLayout
                android:id="@+id/local_item_intro_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true" >

                    <ImageView
                        android:id="@+id/local_item_address_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:contentDescription="@null"
                        android:duplicateParentState="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/address_selects" />

                    <TextView
                        android:id="@+id/local_item_address_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:duplicateParentState="true"
                        android:textColor="@drawable/text_select"
                        android:textSize="@dimen/front_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true" >

                    <ImageView
                        android:id="@+id/local_item_time_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:contentDescription="@null"
                        android:duplicateParentState="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/time_selects" />

                    <TextView
                        android:id="@+id/local_item_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:duplicateParentState="true"
                        android:textColor="@drawable/text_select"
                        android:textSize="@dimen/front_14" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/local_item_intro_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/local_item_intro_child"
                android:layout_marginLeft="45dp"
                android:lines="2"
                android:textColor="#4f4f4f"
                android:textSize="@dimen/front_12" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/local_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/local_item_intro"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/local_item_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_above="@id/local_item_intro"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="-18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/local_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/local_item_intro"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/local_item_icon"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/front_12" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/G:/优商圈app/客户端模版app/微店源码/MicroShop/res/layout/adapter_local_item.xml -->